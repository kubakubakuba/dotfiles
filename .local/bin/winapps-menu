#!/bin/sh

chosen=$(printf "Power Off\nRestart\nLock\nStart WinApps VM\nStop WinApps VM\nKill WinApps VM" | rofi -dmenu)

case "$chosen" in
	"Power Off") poweroff ;;
	"Restart") reboot ;;
	"Lock") loginctl lock-session;;
	"Start WinApps VM") docker compose --file ~/winapps/compose.yaml start;;
	"Stop WinApps VM") docker compose --file ~/winapps/compose.yaml stop;;
	"Kill WinApps VM") docker compose --file ~/winapps/compose.yaml kill;;
	*) exit 1 ;;
esac
